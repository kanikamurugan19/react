
select count(*) from emp;


select min(sal), max(sal), avg(sal), sum(sal)
from emp;


select max(sal)
from emp
where job='clerk';


select sum(sal)
from emp
where deptno=20 and job='analyst';


select deptno, count(*)
from emp
group by deptno;


select job, count(*)
from emp
group by job;


select job, min(sal)
from emp
group by job;


select job, min(sal), max(sal), avg(sal), sum(sal)
from emp
group by job;


select deptno, job, count(*)
from emp
group by deptno, job;


select deptno, job, count(*)
from emp
where deptno=20
group by deptno, job;


select deptno, job, count(*)
from emp
where deptno=20
group by deptno, job
having count(*) > 1
order by job;
