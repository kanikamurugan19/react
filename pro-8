create table inventory(
prono number primary key,
proname varchar2(20),
rate number
);

insert into inventory values(1001,'soap',30);
insert into inventory values(1002,'horlicks',100);
insert into inventory values(1003,'milkybar',50);
insert into inventory values(1004,'chocobar',40);

select * from inventory;

begin
update inventory
set rate = rate + (rate*20/100);
commit;
end;
/

select * from inventory;

alter table inventory add no_of_items number;

desc inventory;

update inventory
set no_of_items = case prono
when 1001 then 10
when 1002 then 8
when 1003 then 6
when 1004 then 4
end;

select * from inventory;
