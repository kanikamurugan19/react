create table library_master(
accno number primary key,
title varchar2(25),
author varchar2(25),
rate number
);

create table library_transaction(
userid number,
accno number references library_master(accno),
date_of_issue date,
date_of_return date
);

insert into library_master values(1001,'c programming','balaguruswamy',300);
insert into library_master values(1002,'c++ programming','balaguru',350);
insert into library_master values(1004,'data structure','michael',400);
insert into library_master values(1005,'oracle & RDBMS','john peter',320);

select * from library_master;

insert into library_transaction values(1,1002,to_date('12-jun-16','dd-mon-yy'),to_date('13-jul-16','dd-mon-yy'));
insert into library_transaction values(2,1005,to_date('25-jul-16','dd-mon-yy'),to_date('24-aug-16','dd-mon-yy'));
insert into library_transaction values(3,1004,to_date('01-jun-16','dd-mon-yy'),to_date('30-jun-16','dd-mon-yy'));

select * from library_transaction;

set linesize 75
ttitle center 'LIBRARY MANAGEMENT' skip 1
column accno heading 'ACCOUNT NUMBER'
column title heading 'BOOK_NAME'
column date_of_issue heading 'DATE_OF_ISSUE'
break on row skip 1

select m.accno, m.title, t.date_of_issue
from library_master m, library_transaction t
where m.accno=t.accno
and date_of_return=to_date('24-aug-16','dd-mon-yy');
