factorial

declare
n number := &n;
f number := 1;
begin
for i in 1..n loop
f := f * i;
end loop;
dbms_output.put_line('factorial is ' || f);
end;
/

sum of digits

declare
n number := &n;
s number := 0;
r number;
begin
while n != 0 loop
r := mod(n,10);
s := s + r;
n := trunc(n/10);
end loop;
dbms_output.put_line('sum of digits is ' || s);
end;
/
